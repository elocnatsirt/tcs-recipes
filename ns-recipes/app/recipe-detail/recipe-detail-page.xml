<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    navigatingTo="navigatingTo"
    class="page">
        <!-- TODO: Switch title to recipe name -->
        <ActionBar title="{{ recipeName }}" class="action-bar">
            <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"></NavigationButton>
            <ActionItem icon="res://navigation/back" 
                android:visibility="collapsed" 
                tap="goBack"
                ios.position="left">
            </ActionItem>
        </ActionBar>

    <StackLayout>
        <Label text="Populate recipe details here"/>
        <Label text="{{ image }}"/>
        <Label text="{{ info }}"/>
        <Label text="Source: {{ source }}"/>
        <Label text="Ingredients: {{ ingredients }}"/>
        <Label text="Steps: {{ steps }}"/>
    </StackLayout>

</Page>