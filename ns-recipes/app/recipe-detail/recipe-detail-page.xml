<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    navigatingTo="navigatingTo"
    class="page">

    <ActionBar title="{{ recipeData.name }}" class="action-bar">
        <StackLayout orientation="horizontal"
            ios:horizontalAlignment="center"
            android:horizontalAlignment="center">
            <Label text="{{ recipeData.name }}" class="action-bar"></Label>
        </StackLayout>
        <NavigationButton text="Go Back" android.systemIcon="ic_menu_back" tap="goBack"/>
        <ActionItem icon="res://navigation/back" 
            android:visibility="collapsed" 
            tap="goBack"
            ios.position="left">
        </ActionItem>
    </ActionBar>

    <ScrollView>
        <StackLayout>
            <Label/>
            <Image src="{{ recipeData.image }}" height="800px"/>
            <Label/>
            <Label horizontalAlignment="center" text="Source" class="h2"/>
            <Label width="90%" onTap="gotoSource" horizontalAlignment="center" text="{{ recipeData.source }}" textWrap="true"/>
            <Label/>
            <Label horizontalAlignment="center" text="Ingredients" class="h2"/>
            <ListView width="90%" items="{{ recipeData.ingredients }}" height="100">
                <StackLayout>
                    <ListView.itemTemplate>
                        <Label text="{{ item }}" />
                    </ListView.itemTemplate>
                </StackLayout>
            </ListView>
            <Label/>
            <Label horizontalAlignment="center" text="Steps" class="h2"/>
            <ListView width="90%" items="{{ recipeData.steps }}" height="100">
                <StackLayout>
                    <ListView.itemTemplate>
                        <Label text="{{ item }}" />
                    </ListView.itemTemplate>
                </StackLayout>
            </ListView>
        </StackLayout>
    </ScrollView>

</Page>